// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
int main() {
  int day;
  do{
  cout<<"a number to print a day";
  cin>>day;
  if(day<1 or day>7){
      cout<<"enter a number between 1 to 7";
  }
  } while(day<1 or day>7);
  switch(day){
      case 1:
      cout<<"day one is monday";
      break;
       case 2:
      cout<<"day one is tuesday";
      break;
       case 3:
      cout<<"day one is wednesday";
      break;
       case 4:
      cout<<"day one is thursday";
      break;
       case 5:
      cout<<"day one is friday";
      break;
       case 6:
      cout<<"day one is saturday";
      break;
       case 7:
      cout<<"day one is sunday";
      break;
      default:
      cout<<"invalid, please enter a number from 1 to 7";
      break;
      
  }
  
    return 0;
}
