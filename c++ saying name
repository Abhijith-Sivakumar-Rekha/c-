#include <iostream>
#include <string> // To use the string data type
using namespace std;

int main() {
    string name;
    int number;  
    int semester;

    cout << "Enter your name: ";
    cin >> name;

    cout << "Enter your number: ";
    cin >> number;

    cout << "Enter your semester: ";
    cin >> semester;
 cout << "Hello, your name is " << name << ", your number is " << number << ", and your semester is " << semester << "." << endl;

    return 0;
}
